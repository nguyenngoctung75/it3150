    <!-- Hiển thị phần subnav -->
    <script>
       // Lấy tất cả các phần tử có class js-subnav
        const subnavItems = document.querySelectorAll('.js-subnav');

        // Thêm sự kiện click vào từng phần tử
        subnavItems.forEach((subnavItem) => {
            const dropdownContent = subnavItem.querySelector('.js-subnav-content');
            const dropdownLink = subnavItem.querySelector('.js-subnav-link');

            // Khi click vào phần tử js-subnav
            subnavItem.addEventListener('click', (event) => {
                // Ngăn chặn hành vi mặc định của thẻ <a>
                event.preventDefault();

                // Đóng tất cả các menu khác trước khi mở
                document.querySelectorAll('.js-subnav-content').forEach((content) => {
                    if (content !== dropdownContent) {
                        content.classList.remove('show');
                    }
                });

                document.querySelectorAll('.js-subnav-link').forEach((link) => {
                    if (link !== dropdownLink) {
                        link.classList.remove('show');
                    }
                });

                // Toggle class show cho menu liên quan
                dropdownLink.classList.toggle('show');
                dropdownContent.classList.toggle('show');

                // Ngăn sự kiện lan ra document
                event.stopPropagation();
            });
        });

        // Lắng nghe sự kiện click trên document
        document.addEventListener('click', () => {
            // Đóng tất cả các menu dropdown
            document.querySelectorAll('.js-subnav-content').forEach((content) => {
                content.classList.remove('show');
            });

            document.querySelectorAll('.js-subnav-link').forEach((link) => {
                link.classList.remove('show');
            });
        });
    </script>

    <script>
        document.addEventListener("DOMContentLoaded", () => {
            const items = document.querySelectorAll('.dropdown-item');
            
            items.forEach(item => {
                const hrefValue = item.getAttribute('href');
                item.addEventListener('click', () => {
                    window.location.href = hrefValue;
                });
            });
        });
    </script>

</body>
